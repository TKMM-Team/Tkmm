<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="using:Tkmm.Wizard.Pages"
             xmlns:markup="clr-namespace:Tkmm.Markup"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tkmm.Wizard.Pages.BaseGameSplitTypePage"
             x:DataType="pages:BaseGameSplitTypePageContext">
    <StackPanel Spacing="16">
        <TextBlock Text="{markup:Locale SetupWizard_BaseGameSplit_Content}" />
        <RadioButton Content="{markup:Locale SetupWizard_BaseGameSplit_SingleFile}" IsChecked="{Binding IsSingleFile}" />
        <RadioButton Content="{markup:Locale SetupWizard_BaseGameSplit_SplitFolder}" IsChecked="{Binding IsSplitFile}" />
    </StackPanel>
</UserControl> 